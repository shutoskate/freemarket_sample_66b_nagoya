= render 'layouts/header'
.top
  -# 広告------------------------------
  .top__advertising
    .advertisement-box
      .advertisement-fonts
        %h2 スマホでかんたん
        %h2 フリマアプリ
        .advertisement-fonts2
          %h2 Fマーケットはスマホからすぐに出品できる
          %h2 購入時も安心な独自システムのアプリです
        .advertisement-img
          = link_to "https://apps.apple.com/jp/app/id667861049?l=ja", class: "apple" do
            = image_tag "apple.png", class: "apple"
          = link_to "https://play.google.com/store/apps/details?id=com.kouzoh.mercari&hl=ja", class: "apple" do
            = image_tag "google.png", class: "google"
      .advertisement-hand
        = image_tag "top-banner.png", class: "advertisement"

  -# 自分がいいねした商品
  -# .top__like

  -# カテゴリー表示----------------------
  .top__category
    .top__category__font
      %h2 人気のカテゴリー
      .top__category__font--list
        = link_to "レディース", "#レディース", class: "select-list" 
        = link_to "メンズ", "#メンズ", class: "select-list" 
        = link_to "家電・スマホ・カメラ", "#家電・スマホ・カメラ", class: "select-list" 
        = link_to "おもちゃ・ホビー・グッズ", "#おもちゃ・ホビー・グッズ", class: "select-list" 

  -# 人気カテゴリー-------------------
  .top__category-item
    .top__category-item__category-list
      = render partial: "top-category", collection: @popular_categories, as: "item"

  -#  以下ブランド ----------------------------------

  .top__category
    .top__category__font
      %h2 人気のブランド
      .top__category__font--list
        - @popular_brand_items.each_with_index do |popular_brand, i|
          = link_to popular_brand[0].brand_id, "#brand#{i}", class: "select-list" 

  -# 人気のブランド--------------------------------------
  .top__category-item
    .top__category-item__category-list
      .top__category-item__category-list__top
      = render partial: "top-brand" , collection: @popular_brand_items, as: "brand"

= render 'layouts/footer'
= render 'layouts/exhibition'