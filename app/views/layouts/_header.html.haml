.header
  .header__center
    .header__top
      .icon
        %a.lists{:href => "/"}
          = image_tag "fmarket_logo_red.svg", class:"fmarket__logo", size: "134x36"
      .search
        .search__area
          = form_tag(search_path, method: 'get') do
            = text_field_tag :search, "", {class: "input", placeholder:"何かお探しですか？"}
            = button_tag type: 'submit' do
              %i.fas.fa-search
    .header__bottom
      %nav.categories__left
        %ul.categories__items
          %li.search
            %h4
              = render "home/category_menu"
          %li.search
            %h4
              %a.lists{:href => "#"}
                %i.fas.fa-tag
                %span ブランドから探す
      -if user_signed_in?
        %nav.categories__right
          %ul.user_area
            %li
              %a.lists(href="#")
                %i.far.fa-heart
                %span いいね！一覧
            %li
              %a.lists(href="#")
                %i.far.fa-bell
                %span お知らせ
            %li
              %a.lists(href="#")
                %i.fas.fa-check
                %span やることリスト
            %li
              %a.lists(href="/mypage")
                %i.far.fa-smile
                %span
                  マイページ
      -else
        %nav.categories__right
          %ul.user_area.no_session
            %li.btn.btn_red
              = link_to '新規会員登録', signup_path
            %li.btn.btn_login
              = link_to 'ログイン', "/login"
              
- unless current_page?(root_path)
  .breadcrumb
    %ul
      %li= breadcrumbs  separator: " > "